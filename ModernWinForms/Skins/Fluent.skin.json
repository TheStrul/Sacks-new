{
  "description": "Light skin for Fluent Design System",
  "palette": {
    "primary": "#0078D4",
    "background": "#F3F3F3",
    "surface": "#FFFFFF",
    "text": "#323130",
    "border": "#EDEBE9",
    "success": "#107C10",
    "warning": "#FFB900",
    "danger": "#D13438",
    "error": "#D13438",
    "info": "#0078D4"
  },
  "controls": {
    "ModernButton": {
      "states": {
        "normal": {
          "backColor": "#FFFFFF",
          "foreColor": "#323130",
          "borderColor": "#8A8886"
        },
        "hover": {
          "backColor": "#F3F2F1",
          "foreColor": "#201F1E",
          "borderColor": "#323130"
        },
        "pressed": {
          "backColor": "#EDEBE9",
          "foreColor": "#201F1E",
          "borderColor": "#323130"
        },
        "disabled": {
          "backColor": "#F3F2F1",
          "foreColor": "#A19F9D",
          "borderColor": "#EDEBE9"
        }
      }
    },
    "ModernRichTextBox": {
      "states": {
        "normal": {
          "backColor": "#FFFFFF",
          "foreColor": "#323130",
          "borderColor": "#8A8886"
        },
        "focused": {
          "borderColor": "#0078D4"
        },
        "disabled": {
          "backColor": "#F3F2F1",
          "foreColor": "#A19F9D",
          "borderColor": "#EDEBE9"
        }
      }
    },
    "ModernRadioButton": {
      "states": {
        "normal": {
          "foreColor": "#323130",
          "borderColor": "#8A8886"
        },
        "checked": {
          "backColor": "#0078D4",
          "borderColor": "#0078D4"
        },
        "hover": {
          "borderColor": "#0078D4"
        },
        "disabled": {
          "foreColor": "#A19F9D",
          "borderColor": "#EDEBE9"
        }
      }
    },
    "ModernCheckBox": {
      "states": {
        "normal": {
          "foreColor": "#323130",
          "borderColor": "#8A8886"
        },
        "checked": {
          "backColor": "#0078D4",
          "borderColor": "#0078D4",
          "foreColor": "#FFFFFF"
        },
        "hover": {
          "borderColor": "#0078D4"
        },
        "disabled": {
          "foreColor": "#A19F9D",
          "borderColor": "#EDEBE9"
        }
      }
    }
  }
}

{
  "Sacks": {
    "Database": {
      "ConnectionString": "Server=(localdb)\\mssqllocaldb;Database=SacksProductsDb;Trusted_Connection=true;TrustServerCertificate=true;",
      "Provider": "SqlServer",
      "CommandTimeout": 30,
      "RetryOnFailure": true,
      "MaxRetryCount": 3,
      "EnableSensitiveDataLogging": false,
      "EnableDetailedErrors": false
    },
    "FileProcessing": {
      "InputDirectory": "Inputs",
      "OutputDirectory": "../Outputs",
      "ArchiveDirectory": "../Archive",
      "MaxFileSizeBytes": 104857600,
      "SupportedExtensions": [ ".xlsx", ".xls", ".csv" ]
    },
    "OpenBeautyFacts": {
      "InputDirectory": "AllInputs/db",
      "BatchSize": 100,
      "EnableProgressLogging": true,
      "SupportedFileExtensions": [ ".jsonl" ],
      "MaxFileSizeBytes": 524288000
    },
    "Logging": {
      "DeleteLogFilesOnStartup": true,
      "LogFilePaths": [ "logs" ]
    },
    "McpServer": {
      "ServerName": "SacksMcp",
      "Version": "1.0.0",
      "MaxConcurrentTools": 10,
      "ToolTimeoutSeconds": 30,
      "EnableDetailedLogging": false
    },
    "McpClient": {
      "ServerExecutablePath": "dotnet",
      "ServerArguments": "run --project SacksMcp.Console/SacksMcp.Console.csproj",
      "ServerWorkingDirectory": null,
      "ToolTimeoutSeconds": 30
    },
    "ConfigurationFiles": {
      "ConfigurationFolder": "Configuration",
      "MainFileName": "supplier-formats.json"
    },
    "UI": {
      "RestoreWindowPositions": true
    }
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Error",
        "Microsoft.EntityFrameworkCore": "Error",
        "Microsoft.EntityFrameworkCore.Database.Command": "Error",
        "System": "Error"
      }
    },
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "logs/sacks-.log",
          "rollingInterval": "Day",
          "rollOnFileSizeLimit": true,
          "fileSizeLimitBytes": 10485760,
          "retainedFileCountLimit": 10,
          "outputTemplate": "[{Timestamp:HH:mm:ss.fff} {Level:u3}]: {Message:lj}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName" ]
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning",
      "ModelContextProtocol": "Information"
    }
  }
}

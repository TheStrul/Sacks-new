{
  "McpServerExtended": {
    "ServerName": "SacksMcp",
    "Version": "1.0.0",
    "MaxConcurrentTools": 10,
    "ToolTimeoutSeconds": 30,
    "EnableDetailedLogging": false
  },
  "Database": {
    "ConnectionString": "Server=(localdb)\\mssqllocaldb;Database=SacksProductsDb;Trusted_Connection=true",
    "Provider": "SqlServer",
    "CommandTimeout": 30,
    "EnableSensitiveDataLogging": false,
    "EnableDetailedErrors": false,
    "MaxRetryAttempts": 3
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning",
      "ModelContextProtocol": "Information"
    }
  }
}

{
  "CustomMcpServer": {
    "ServerName": "SacksMcp",
    "Version": "1.0.0",
    "Description": "Reusable MCP Server template for database operations with EF Core",
    "MaxConcurrentTools": 10,
    "ToolTimeoutSeconds": 30,
    "EnableDetailedLogging": false
  },
  "Database": {
    "ConnectionString": "Server=localhost;Database=SacksDb;Integrated Security=true;TrustServerCertificate=true;",
    "Provider": "SqlServer",
    "CommandTimeout": 30,
    "EnableSensitiveDataLogging": false,
    "EnableDetailedErrors": false,
    "MaxRetryAttempts": 3
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning",
      "ModelContextProtocol": "Information"
    }
  }
}

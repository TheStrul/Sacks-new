{
  "description": "Google's Material Design system with minimal borders and subtle shadows",
  "typography": {
    "fontFamily": "Segoe UI",
    "fontSize": 9.0
  },
  "spacing": {
    "baseUnit": 8,
    "small": 4,
    "medium": 8,
    "large": 16,
    "xlarge": 24
  },
  "controls": {
    "ModernButton": {
      "cornerRadius": 4,
      "borderWidth": 0,
      "padding": {
        "left": 16,
        "top": 10,
        "right": 16,
        "bottom": 10
      }
    },
    "ModernGroupBox": {
      "borderWidth": 1,
      "cornerRadius": 4
    },
    "ModernTextBox": {
      "borderWidth": 1,
      "cornerRadius": 4,
      "padding": {
        "left": 12,
        "top": 8,
        "right": 12,
        "bottom": 8
      }
    }
  }
}

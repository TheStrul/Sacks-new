{
  "version": "1.0",
  "lastUpdated": "2024-12-19T10:00:00Z",
  "description": "Configuration file for all supplier file formats",
  "suppliers": [
    {
      "name": "DIOR",
      "description": "DIOR beauty and fragrance products supplier",
      "detection": {
        "fileNamePatterns": ["DIOR*.xlsx"]
      },
      "columnIndexMappings": {
        "A": "Category",
        "C": "Family",
        "D": "CommercialLine",
        "F": "PricingItemName",
        "G": "EAN",
        "H": "Name",
        "J": "Size",
        "L": "Unit",
        "M": "EAN",
        "N": "Capacity",
        "O": "Price"
      },
      "propertyClassification": {
        "coreProductProperties": [
          "EAN", "Category", "Family", "CommercialLine", "PricingItemName", "Size"
        ],
        "offerProperties": [
          "Price", "Capacity"
        ]
      },
      "dataTypes": {
        "PRICE": {
          "type": "decimal",
          "format": "currency",
          "defaultValue": 0,
          "allowNull": false,
          "transformations": ["removeSymbols", "parseDecimal"]
        },
        "Name": {
          "type": "string",
          "allowNull": false,
          "transformations": ["trim"]
        },
        "Category": {
          "type": "string",
          "allowNull": true,
          "maxLength": 100,
          "transformations": ["trim"]
        },
        "Size": {
          "type": "string",
          "allowNull": true,
          "maxLength": 50,
          "transformations": ["trim"]
        },
        "Unit": {
          "type": "string",
          "allowNull": true,
          "maxLength": 20,
          "transformations": ["trim"]
        },
        "EAN": {
          "type": "string",
          "allowNull": true,
          "maxLength": 20,
          "transformations": ["trim", "removeSpaces"]
        },
        "Capacity": {
          "type": "string",
          "allowNull": true,
          "maxLength": 50,
          "transformations": ["trim"]
        },
        "CommercialLine": {
          "type": "string",
          "allowNull": true,
          "maxLength": 100,
          "transformations": ["trim"]
        },
        "Family": {
          "type": "string",
          "allowNull": true,
          "maxLength": 100,
          "transformations": ["trim"]
        },
        "PricingItemName": {
          "type": "string",
          "allowNull": true,
          "maxLength": 255,
          "transformations": ["trim"]
        },
        "Description": {
          "type": "string",
          "allowNull": true,
          "maxLength": 2000,
          "transformations": ["trim"]
        }
      },
      "validation": {
        "dataStartRowIndex": 5,
        "expectedColumnCount": 11
      },
      "transformation": {
        "skipEmptyRows": true,
        "trimWhitespace": true,
        "subtitleRowHandling": {
          "enabled": true,
          "action": "parse",
          "detectionRules": [
            {
              "name": "CategoryHeaderRow",
              "description": "Rows that define product categories",
              "detectionMethod": "columnCount",
              "expectedColumnCount": 1,
              "columnIndexMappings": {
                "A": "CurrentCategory"
              },
              "applyToSubsequentRows": true,
              "validationPatterns": [
                "^(Beauty Products|Fragrances|Makeup|Skincare)$",
                "===.*===",
                "Category:.*"
              ]
            },
            {
              "name": "SectionHeaderRow", 
              "description": "Rows that define product sections",
              "detectionMethod": "columnCount",
              "expectedColumnCount": 2,
              "columnIndexMappings": {
                "A": "SectionType",
                "B": "CurrentSection"
              },
              "applyToSubsequentRows": true,
              "validationPatterns": [
                "Section:",
                "Category:",
                "Brand:"
              ]
            },
            {
              "name": "ManufacturerRow",
              "description": "Rows that define manufacturer info",
              "detectionMethod": "columnCount", 
              "expectedColumnCount": 3,
              "columnIndexMappings": {
                "A": "ManufacturerName",
                "B": "ManufacturerCode",
                "C": "ManufacturerRegion"
              },
              "applyToSubsequentRows": true,
              "validationPatterns": [
                "Manufacturer:",
                "Brand:",
                "Supplier:"
              ]
            }
          ],
          "fallbackAction": "skip"
        },
        "skipRowsWithMergedCells": true,
        "customTransformations": {}
      },
      "metadata": {
        "industry": "Beauty & Cosmetics",
        "region": "Global",
        "contact": {
          "name": "DIOR Data Team",
          "email": "data@dior.com",
          "company": "Christian Dior SE"
        },
        "fileFrequency": "monthly",
        "expectedFileSize": "Large (1000+ products)",
        "notes": [
          "Files typically contain 4000+ products",
          "Price format includes currency symbols", 
          "Multiple product categories: Fragrances, Makeup, Skincare",
          "Uses Excel column letters (A, B, C, etc.) for user-friendly mapping",
          "Column positions are fixed: A=Name, B=EAN, C=Price, L=Description",
          "Data processing starts from Excel row 2 (dataStartRowIndex: 1), row 1 is typically headers",
          "Subtitle rows are detected by column count and parsed using specific column mappings",
          "Each subtitle type has its own columnIndexMappings and expectedColumnCount",
          "Example: Single column rows (A=Category), Two column rows (A=SectionType, B=Value)"
        ],
        "lastUpdated": "2025-08-31T10:00:00Z",
        "version": "2.0"
      }
    }
  ]
}